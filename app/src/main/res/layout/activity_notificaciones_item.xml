<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    android:id="@+id/CanchitaItemLaoyout" >


    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        >

        <ImageView
            android:id="@+id/generic_image"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/headphone"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/generic_field_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:padding="4dp"
        android:text=""
        android:textColor="@color/white"
        android:background="@color/ficohsa_official_blue_medium"
        android:textSize="16dip"
        />


    <TextView
        android:id="@+id/generic_field_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:padding="4dp"
        android:layout_below="@id/generic_field_1"
        android:text=""
        android:textSize="16dip"
        android:textColor="@color/white"
        android:background="@color/ficohsa_official_blue_medium"
        />

    <TextView
        android:id="@+id/generic_field_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:padding="4dp"
        android:layout_below="@id/generic_field_2"
        android:text=""
        android:textSize="16dip"
        android:textColor="@color/white"
        android:background="@color/ficohsa_official_blue_medium"
        />





</RelativeLayout>